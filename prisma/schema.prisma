// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Orden {
  id                   String      @id @default(cuid())
  numeroOrden          String      @unique
  nombreClienteEntrega String
  destino              String
  fecha                DateTime
  horaHasta            String
  nombreClienteRetiro  String
  direccionRetiro      String
  horaDesde            String
  total                Float
  montoEnvio           Float
  aclaraciones         String
  estado               EstadoOrden @default(PENDIENTE)
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt
  repartoId            String?
  reparto              Reparto?    @relation(fields: [repartoId], references: [id])
}

model Repartidor {
  id       Int      @id @default(autoincrement())
  nombre   String
  repartos Reparto[]
}

model Reparto {
  id           String   @id @default(cuid())
  fecha        DateTime
  repartidorId Int
  repartidor   Repartidor @relation(fields: [repartidorId], references: [id])
  ordenes      Orden[]
}

enum EstadoOrden {
  PENDIENTE
  RETIRADO
  EN_CAMINO
  COMPLETADO
  FALLIDO
}
