datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["accelerate"]
}

model Orden {
  numeroOrden          String      @id @unique
  nombreClienteEntrega String
  destino              String
  fecha                DateTime
  horaHasta            String
  nombreClienteRetiro  String
  direccionRetiro      String
  horaDesde            String
  total                Float
  montoEnvio           Float
  aclaraciones         String
  estado               EstadoOrden
  repartoId            String?
  reparto              Reparto?    @relation(fields: [repartoId], references: [id])
  lat                  Float?
  lng                  Float?
}

model Repartidor {
  id       Int      @id @default(autoincrement())
  nombre   String   @unique
  repartos Reparto[]
}

model Reparto {
  id           String   @id @default(cuid())
  fecha        DateTime
  repartidorId Int
  repartidor   Repartidor @relation(fields: [repartidorId], references: [id])
  ordenes      Orden[]
}

enum EstadoOrden {
  PENDIENTE
  ASIGNADO
  RETIRADO
  EN_CAMINO
  COMPLETADO
  FALLIDO
}
